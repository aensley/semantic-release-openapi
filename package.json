{
  "name": "@aensley/semantic-release-openapi",
  "version": "1.2.1",
  "description": "A Semantic Release plugin to update versions in OpenAPI / Swagger specification files",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/semantic-release-openapi.git"
  },
  "keywords": [
    "semantic-release",
    "plugin",
    "openapi",
    "version",
    "swagger",
    "asyncapi"
  ],
  "author": {
    "name": "Andrew Ensley",
    "email": "aensley@users.noreply.github.com",
    "url": "https://andrewensley.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aensley/semantic-release-openapi/issues/new?template=bug-report.yml"
  },
  "funding": [
    "https://github.com/sponsors/aensley",
    "https://paypal.me/AndrewEnsley"
  ],
  "homepage": "https://github.com/aensley/semantic-release-openapi#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "precommit-msg": "echo Running pre-commit checks...",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "format": "prettier --write .",
    "test": "ts-standard && prettier --check . && jest --coverage --verbose",
    "lint": "ts-standard && prettier --check .",
    "setup": "npm install && npm run prepare-hook",
    "update": "npx npm-check-updates -u && npm update",
    "prepare-hook": "echo 'exec < /dev/tty && node_modules/.bin/cz --hook || true' > .git/hooks/prepare-commit-msg && chmod +x .git/hooks/prepare-commit-msg"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "engines": {
    "node": ">=16"
  },
  "platform": "node",
  "dependencies": {
    "@semantic-release/error": "^4.0.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "replace-in-file": "^8.3.0",
    "semantic-release": "^24.2.5"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29",
    "@types/node": "^24.0.4",
    "@types/semantic-release": "^20.0.6",
    "@types/semantic-release__error": "^3.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.1",
    "ts-jest": "^29",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5.8.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "globals": [],
    "ignore": [
      "/test/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@semantic-release/error)"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
