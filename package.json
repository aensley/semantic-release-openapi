{
  "name": "@aensley/semantic-release-openapi",
  "version": "1.0.1",
  "description": "A Semantic Release plugin to update versions in OpenAPI specifications",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/semantic-release-openapi.git"
  },
  "keywords": [
    "semantic-release",
    "plugin",
    "openapi",
    "version",
    "swagger",
    "asyncapi"
  ],
  "author": {
    "name": "Andrew Ensley",
    "email": "aensley@users.noreply.github.com",
    "url": "https://andrewensley.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aensley/semantic-release-openapi/issues"
  },
  "funding": [
    "https://github.com/sponsors/aensley",
    "https://paypal.me/AndrewEnsley"
  ],
  "homepage": "https://github.com/aensley/semantic-release-openapi#readme",
  "scripts": {
    "precommit-msg": "echo Running pre-commit checks...",
    "format": "prettier --write .",
    "test": "ts-standard && prettier --check . && jest --coverage --verbose",
    "setup": "npm install && npm run prepare-hook",
    "prepare-hook": "echo 'exec < /dev/tty && node_modules/.bin/cz --hook || true' > .git/hooks/prepare-commit-msg && chmod +x .git/hooks/prepare-commit-msg"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "engines": {
    "node": ">=16"
  },
  "platform": "node",
  "type": "module",
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "replace-in-file": "^6.3.5",
    "semantic-release": "^19.0.5"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/semantic-release": "^17.2.4",
    "@types/semantic-release__error": "^3.0.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "globals": [],
    "ignore": [
      "/test/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "jest": {
    "clearMocks": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
